				   name="@Html.NameFor(model => model.Customer)" 
				   value="@Html.ValueFor(model => model.Customer)"
				   tabindex="1" 
				   style="width:100%" 
				   class="easyui-textbox" 
				   type="text" 
				   data-options="prompt:'客户',
