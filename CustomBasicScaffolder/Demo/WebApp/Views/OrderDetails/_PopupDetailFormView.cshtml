 </div>


<script type="text/javascript">
    //load data by foreign key
    function loadData(id,data){
         $('#orderdetail_form').form('load', data);
             }
    //save item
    function saveitem() {
        if ($('#orderdetail_form').form('enableValidation').form('validate')) {
            var item = $('#orderdetail_form').serializeObject();

            $.post("/OrderDetails/Edit", item, function (response) {
                //console.log(response);						
                if (response.success) {
                    $.messager.alert("提示", "保存成功！");
                    $('#detailswindow').window('close');

                } else {
                    $.messager.alert("错误", "保存失败！" + response.err, "error");
                }
            }, "json").fail(function (response) {
                //console.log(response);						
                $.messager.alert("错误", "保存失败！", "error");
                //$dg.datagrid("reload");						
            });
        }
    }
    // cancel
    function cancelitem() {
        $('#detailswindow').window('close');
    }
    // reload
    function refreshitem() {
        $('#detailswindow').window('close');
    }
    


    

</script>


