                                            <th data-options="field:'Name',width:140,editor:{type:'textbox',options:{required:false} } ">@Html.DisplayNameFor(model => model.Name)</th>


                                            <th data-options="field:'Address',width:140,editor:{type:'textbox',options:{required:false} } ">@Html.DisplayNameFor(model => model.Address)</th>


                                            <th data-options="field:'City',width:140,editor:{type:'textbox',options:{required:false} } ">@Html.DisplayNameFor(model => model.City)</th>


                                            <th data-options="field:'Province',width:140,editor:{type:'textbox',options:{required:false} } ">@Html.DisplayNameFor(model => model.Province)</th>


                                            <th data-options="field:'RegisterDate',width:160,align:'right',editor:{type:'datetimebox',options:{}} , formatter:dateformatter ">@Html.DisplayNameFor(model => model.RegisterDate)</th>


                                            <th data-options="field:'Employees',width:100,align:'right',editor:{type:'numberbox',options:{precision:2}}">@Html.DisplayNameFor(model => model.Employees)</th>


