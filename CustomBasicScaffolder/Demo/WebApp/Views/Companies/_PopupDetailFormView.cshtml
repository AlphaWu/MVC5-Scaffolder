﻿@model WebApp.Models.Company
<!-- 输出form表单界面 -->
<div id="detailswindow" hidden="hidden" class="easyui-window"
     title="明细数据"
     data-options="modal:true,
                    closed:true,
                    iconcls:'icon-menu',
                    onOpen:resize" style="width:960px;height:520px">
    <form id="company_form" class="smart-form easyui-form" method="post" data-options="novalidate:true">
        <table class="table table-bordered">
            <caption>
                <!--form toolbar-->
                <div id="form_toolbar" style="height:auto" class="datagrid-toolbar">
                    <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-save',plain:true" onclick="saveitem()">保存</a>
                    <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-undo',plain:true" onclick="cancelitem()">取消</a>
                    <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-refresh',plain:true" onclick="refreshitem()">刷新</a>
                </div>
                <!--form toolbar-->
            </caption>
            <tr>
                <td class="control-label">   @Html.DisplayNameFor(model => model.Id)  </td>
                <td>
                    <input id="@Html.IdFor(model => model.Id)"
                           name="@Html.NameFor(model => model.Id)"
                           value="@Html.ValueFor(model => model.Id)"
                           tabindex="0"
                           class="easyui-numberbox" type="text"
                           data-options="prompt:'Id',
                                 readonly:true,
                                width:200,
                                 label:'',required:true ,precision:0" />
                </td>
                <td class="control-label">   @Html.DisplayNameFor(model => model.Name)  </td>
                <td>
                    <input id="@Html.IdFor(model => model.Name)"
                           name="@Html.NameFor(model => model.Name)"
                           value="@Html.ValueFor(model => model.Name)"
                           tabindex="1"
                           class="easyui-textbox"
                           type="text"
                           data-options="prompt:'名称',
								 label:'',
                                width:200,
								 required:false ,validType:'length[0,50]'" />
                </td>
            </tr>
            <tr>
                <td class="control-label">   @Html.DisplayNameFor(model => model.Address)  </td>
                <td>
                    <input id="@Html.IdFor(model => model.Address)"
                           name="@Html.NameFor(model => model.Address)"
                           value="@Html.ValueFor(model => model.Address)"
                           tabindex="2"
                           class="easyui-textbox"
                           type="text"
                           data-options="prompt:'地址',
								 label:'',
                                width:200,
								 required:false ,validType:'length[0,50]'" />
                </td>
                <td class="control-label">   @Html.DisplayNameFor(model => model.City)  </td>
                <td>
                    <div class="input-group" style="width:200px">
                        <input id="@Html.IdFor(model => model.City)"
                               name="@Html.NameFor(model => model.City)"
                               value="@Html.ValueFor(model => model.City)"
                               tabindex="3"
                               class="form-control"
                               type="text" style="width:200px" />
                        <div class="input-group-btn">
                           
                            <ul class="dropdown-menu dropdown-menu-right" role="menu"></ul>
                        </div>
                    </div>
                </td>
            </tr>
            <tr>
                <td class="control-label">   @Html.DisplayNameFor(model => model.Province)  </td>
                <td>
                    <input id="@Html.IdFor(model => model.Province)"
                           name="@Html.NameFor(model => model.Province)"
                           value="@Html.ValueFor(model => model.Province)"
                           tabindex="4"
                           class="easyui-textbox"
                           type="text"
                           data-options="prompt:'省份',
								 label:'',
                                width:200,
								 required:false ,validType:'length[0,50]'" />
                </td>
                <td class="control-label">   @Html.DisplayNameFor(model => model.RegisterDate)  </td>
                <td>
                    <input id="@Html.IdFor(model => model.RegisterDate)"
                           name="@Html.NameFor(model => model.RegisterDate)"
                           tabindex="5"
                           class="easyui-datebox"
                           type="text"
                           value="@Html.ValueFor(model => model.RegisterDate)"
                           data-options="prompt:'注册日期',
								 label:'',
                                width:200,
								 required:true,
								 formatter:dateformatter" />
                </td>
            </tr>
            <tr>
                <td class="control-label">   @Html.DisplayNameFor(model => model.Employees)  </td>
                <td>
                    <input id="@Html.IdFor(model => model.Employees)"
                           name="@Html.NameFor(model => model.Employees)"
                           value="@Html.ValueFor(model => model.Employees)"
                           tabindex="6"
                           class="easyui-numberbox"
                           type="text"
                           data-options="prompt:'员工数',
								 label:'',
                                width:200,
								 required:true ,precision:0" />
                </td>
                <td class="control-label">   @Html.DisplayNameFor(model => model.CreatedDate)  </td>
                <td>
                    <input id="@Html.IdFor(model => model.CreatedDate)"
                           name="@Html.NameFor(model => model.CreatedDate)"
                           tabindex="7"
                           class="easyui-datebox"
                           type="text"
                           value="@Html.ValueFor(model => model.CreatedDate)"
                           data-options="prompt:'创建时间',
								 label:'',
                                width:200,
								 required:false,
								 formatter:dateformatter" />
                </td>
            </tr>
            <tr>
                <td class="control-label">   @Html.DisplayNameFor(model => model.CreatedBy)  </td>
                <td>
                    <input id="@Html.IdFor(model => model.CreatedBy)"
                           name="@Html.NameFor(model => model.CreatedBy)"
                           value="@Html.ValueFor(model => model.CreatedBy)"
                           tabindex="8"
                           class="easyui-textbox"
                           type="text"
                           data-options="prompt:'创建用户',
								 label:'',
                                width:200,
								 required:false ,validType:'length[0,20]'" />
                </td>
                <td class="control-label">   @Html.DisplayNameFor(model => model.LastModifiedDate)  </td>
                <td>
                    <input id="@Html.IdFor(model => model.LastModifiedDate)"
                           name="@Html.NameFor(model => model.LastModifiedDate)"
                           tabindex="9"
                           class="easyui-datebox"
                           type="text"
                           value="@Html.ValueFor(model => model.LastModifiedDate)"
                           data-options="prompt:'最后更新时间',
								 label:'',
                                width:200,
								 required:false,
								 formatter:dateformatter" />
                </td>
            </tr>
            <tr>
                <td class="control-label">   @Html.DisplayNameFor(model => model.LastModifiedBy)  </td>
                <td>
                    <input id="@Html.IdFor(model => model.LastModifiedBy)"
                           name="@Html.NameFor(model => model.LastModifiedBy)"
                           value="@Html.ValueFor(model => model.LastModifiedBy)"
                           tabindex="10"
                           class="easyui-textbox"
                           type="text"
                           data-options="prompt:'最后更新用户',
								 label:'',
                                width:200,
								 required:false ,validType:'length[0,20]'" />
                </td>
                <td></td>
                <td></td>
            </tr>
            <tfoot>
                <tr>
                <tr>
            </tfoot>
        </table>
    </form>

    <!--输出form表单界面-->
    <!--========================================================================================-->
</div>


<script type="text/javascript">
    //load data by foreign key
    function loadData(id, data) {
        $('#company_form').form('load', data);
    }
    //save item
    function saveitem() {
        if ($('#company_form').form('enableValidation').form('validate')) {
            var item = $('#company_form').serializeObject();

            $.post("/Companies/Edit", item, function (response) {
                //console.log(response);
                if (response.success) {
                    $.messager.alert("提示", "保存成功！");
                    $('#detailswindow').window('close');

                } else {
                    $.messager.alert("错误", "保存失败！" + response.err, "error");
                }
            }, "json").fail(function (response) {
                //console.log(response);
                $.messager.alert("错误", "保存失败！", "error");
                //$dg.datagrid("reload");
            });
        }
    }
    // cancel
    function cancelitem() {
        $('#detailswindow').window('close');
    }
    // reload
    function refreshitem() {
        $('#detailswindow').window('close');
    }
    //easyui window resize function
    function resize() {

    }


    $(function () {
        $("input#City").bsSuggest({
            data: {
                value: messagetypefiltersource
            },
            effectiveFieldsAlias: { text: "Text" },
            ignorecase: true,
            showHeader: false,
            showBtn: false,     //不显示下拉按钮
            delayUntilKeyup: true, //获取数据的方式为 firstByUrl 时，延迟到有输入/获取到焦点时才请求数据
            idField: "value",
            keyField: "text",
            clearable: false
        }).on('onDataRequestSuccess', function (e, result) {
            console.log('onDataRequestSuccess: ', result);
        }).on('onSetSelectValue', function (e, keyword, data) {
            console.log('onSetSelectValue: ', keyword, data);
        }).on('onUnsetSelectValue', function () {
            console.log("onUnsetSelectValue");
        });

    })

</script>


